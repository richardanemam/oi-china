<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar_id"
            android:layout_width="match_parent"
            android:layout_height="@dimen/appbar_height"
            android:gravity="center"
            android:importantForAccessibility="no"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <android.support.constraint.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:layout_editor_absoluteX="16dp"
                tools:layout_editor_absoluteY="82dp">

                <TextView
                    android:id="@+id/tv_puhan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:importantForAccessibility="no"
                    android:text="@string/app_name"
                    android:textColor="@color/logo_color"
                    android:textSize="@dimen/app_name_size"
                    app:layout_constraintBottom_toTopOf="@id/tv_slogan"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <TextView
                    android:id="@+id/tv_slogan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:importantForAccessibility="no"
                    android:text="@string/slogan"
                    android:textColor="@color/logo_color"
                    android:textSize="@dimen/slogan_size"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="@id/tv_puhan"
                    app:layout_constraintTop_toBottomOf="@id/tv_puhan" />

            </android.support.constraint.ConstraintLayout>
        </android.support.v7.widget.Toolbar>

        <Button
            android:id="@+id/btn_licoes"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:background="@drawable/button_background"
            android:drawableStart="@drawable/lesson_button"
            android:drawableLeft="@drawable/lesson_button"
            android:padding="24dp"
            android:text="@string/licoes"
            android:textColor="@color/logo_color"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/toolbar_id" />

        <Button
            android:id="@+id/btn_expressoes"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:background="@drawable/button_background"
            android:drawableStart="@drawable/characters_button"
            android:drawableLeft="@drawable/characters_button"
            android:padding="24dp"
            android:text="@string/expressoes"
            android:textColor="@color/logo_color"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btn_licoes" />

        <Button
            android:id="@+id/btn_sobre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="64dp"
            android:layout_marginBottom="8dp"
            android:background="@null"
            android:text="@string/sobre"
            android:textAllCaps="false"
            android:textColor="@color/black_000000"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/btn_expressoes" />

    </android.support.constraint.ConstraintLayout>
</ScrollView>